    {
        title: "CAJAS1970 - Fabrica de cajas." ,
        description: "Fabrica de cajas de microcorrugado y cartulina, venta mayorista y minorista.",
        link: "#",
        github:"https://github.com/ttttttomas/Cajas1970-proyect",
        image: "/public/cajas1970.webp",
